%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 5 5 105 105
%%BeginProlog
%%EndProlog
/debug {(halp) pstack pop} def % println style debugging
/brewer [ % colorbrewer2.org: 9 classes qualtiative print friendly
    [228 26 28] % red
    [55 126 184] % blue
    [77 175 74] % green
    [152 78 163] % purple
    [255 127 0] % orange
    [255 255 51] % yellow
    [166 86 40] % brown
    [247 129 191] % pink
    [153 153 153] % grey
] def
/setbrew { % brewer index to setrgbcolor
    brewer exch get
    debug
    { 255 div } forall
    debug
    setrgbcolor
} def
/row {1 add 10 mul} def % row offset
/seg { % time segment as coloured horizontal line
    % stack: nth-row start-time end-time type
    newpath
    setbrew
    3 -1 roll % roll third-last to top of stack
    row
    debug
    0 moveto
    0 rlineto
    5 setlinewidth
    stroke
} def
0 10 500 0 seg
showpage
%%EOF
